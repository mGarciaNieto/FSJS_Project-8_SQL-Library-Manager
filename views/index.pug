extends layout

block content
  h1= title
  h1 Books
  h1 Welcome to #{title}
  img.library-img(src='images/libraryPexels.jpeg' alt='Image of a library')

  h1 Books
    form.form(method="post" action="/books") 
      input.input(type="text" name="search" placeholder="Search books...")
      button.btn(type="submit") Search
       svg(fill="#fff" class="svg" height="20" viewBox="0 0 23 23" width="20" xmlns="http://www.w3.org/2000/svg")
            path(d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z")
            path(d="M0 0h24v24H0z" fill="none")

    p 
      a.button(href='books/new') Create New Book 
    table.table 
      thead 
        tr 
          th Title 
          th Author 
          th Genre
          th Year
      tbody
        each book in books
          tr
            td 
              a(href=`/books/${book.id}`)= book.title 
            td= book.author
            td= book.genre
            td= book.year  

    if (totalPages > 1)
        ul.pagination
          - for (let i = 1; i <= totalPages; i++)
            li
              a(href=`/books?page=${i}`)= i