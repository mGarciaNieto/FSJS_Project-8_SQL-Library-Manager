extends layout

block content
  h1= title
  h1 Books
  h1 Welcome to #{title}
  img.library-img(src='images/libraryPexels.jpeg' alt='Image of a library')

  h1 Books
  p 
    a.button(href='books/new') Create New Book 
  table.table 
    thead 
      tr 
        th Title 
        th Author 
        th Genre
        th Year
    tbody
      each book in books
        tr
          td 
            a(href=`/books/${book.id}`)= book.title 
          td= book.author
          td= book.genre
          td= book.year  